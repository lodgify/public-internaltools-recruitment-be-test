@model List<SuperPanel.Models.User>
@{
    ViewData["Title"] = "Deleted Users Report";
}

<h3>Deleted Users Report</h3>
<hr />
@if (Model.Count == 0)
{
    <h5>No users where deleted!</h5>
}
else
{
    <h5>The next users where deleted:</h5>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Created at</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.FirstName @u.LastName</td>
                    <td>@u.Email</td>
                    <td>@u.CreatedAt</td>
                </tr>
            }
        </tbody>
    </table>
}
<hr />
<a asp-controller="Users" asp-action="Index">Back to List</a>
